{
  "extends": "./tsconfig.node18.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "lib": ["es2022"],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*/dist", "**/*.test.ts"]
}
